<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mapstopsbutton" android:text="Map Stops"></Button>
<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ListStopsButton" android:text="List Stops" android:layout_below="@+id/mapstopsbutton"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RefreshDBButton" android:layout_below="@+id/ListStopsButton" android:text="Refresh Stop DB"></Button>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignBottom="@+id/RelativeLayout01" android:layout_alignParentBottom="true" android:hint="STOP_COUNT" android:id="@+id/stopcount">
</TextView>



</RelativeLayout>
